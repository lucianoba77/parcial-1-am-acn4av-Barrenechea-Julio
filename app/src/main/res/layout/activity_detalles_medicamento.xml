<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:paddingTop="24dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medicine_details_title"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_edit"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_dark" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Informaci칩n General del Medicamento -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <ImageView
                            android:id="@+id/ivIconoMedicamento"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:contentDescription="@string/medicine_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNombreMedicamento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Paracetamol 500mg"
                                android:textSize="@dimen/text_size_header"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/margin_small" />

                            <TextView
                                android:id="@+id/tvPresentacion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Comprimidos"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@android:color/darker_gray" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Informaci칩n detallada -->
                    <TextView
                        android:id="@+id/tvAfeccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Afecci칩n: Dolor de cabeza"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvHorarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horarios: 08:00, 14:00, 20:00"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stock: 25/30"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado: Activo"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvTipoTratamiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo: Tratamiento programado"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Resumen de Adherencia -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adherence_summary_title"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <TextView
                        android:id="@+id/tvResumenAdherencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adherencia: 85%"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvTomasRealizadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tomas realizadas: 25/30"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Gr치fico de Adherencia Semanal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adherence_weekly_chart_title"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartAdherenciaSemanal"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Historial de Tomas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/takes_history_title"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHistorialTomas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/tvEmptyHistorial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_takes_history"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

