<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la aplicación -->
    <style name="Theme.ControlMedicamentos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Colores de estado -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Barra de estado - Compatible con API 21+ -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Solo para API 23+ -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <!-- Tipografía -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <!-- Tema para botones de medicamentos -->
    <style name="MedicineButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <!-- Tema para botones de navegación -->
    <style name="NavigationButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">@dimen/nav_button_size</item>
        <item name="android:layout_height">@dimen/nav_button_size</item>
        <item name="android:layout_margin">@dimen/nav_button_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <!-- Tema para campos de formulario -->
    <style name="FormField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/form_field_margin</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>